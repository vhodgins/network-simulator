{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/libs/*.cpp",
                "${workspaceFolder}/gui/*.cpp",
                "-o",
                "netsim",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
